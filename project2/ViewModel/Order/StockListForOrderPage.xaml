<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="project2.StockListForOrderPage"
		Title="Stock"
		Padding="0, 20, 0, 0">


	
	<ContentPage.Content>

		<ListView x:Name="stocklistview" RowHeight="60" >
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<ViewCell.ContextActions>
							<MenuItem Text="Edit"  CommandParameter="{Binding .}" Clicked="OnEdit" />
							<MenuItem Text="Delete" IsDestructive="True" CommandParameter="{Binding .}" Clicked="OnDelete" />
						</ViewCell.ContextActions>
						<StackLayout Orientation="Vertical" Padding="10">
							<Label Text="{Binding Date}"/>
							<StackLayout Padding="5" Orientation="Horizontal">
								<Label Text="{Binding StaffName}" FontSize="Small" />
								<Label Text="{Binding OpearteTime}" FontSize="Small"  />

							</StackLayout>
						</StackLayout>

					</ViewCell>
	        	</DataTemplate>	
	    	</ListView.ItemTemplate>
		</ListView>
	</ContentPage.Content>
</ContentPage>
